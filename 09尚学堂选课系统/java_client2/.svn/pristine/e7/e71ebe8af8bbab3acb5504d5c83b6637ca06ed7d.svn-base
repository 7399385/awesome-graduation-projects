package com.bjsxt.client;

public class Regex {
	public boolean passwordRegex(String str)
	{
		String regex="[a-zA-Z0-9]{4,10}";
		return str.matches(regex);
	}
		public boolean sexRegex(String str)
		{
			String regex="[fFmM]{1}";
			return str.matches(regex);
		}
				public boolean nameRegex(String str)
				{
					String regex="[a-zA-Z]{1,10}";
					return str.matches(regex);
				}
		public boolean ageRegex(String str)
		{
			String regex="[0-9]{1,2}";
			return str.matches(regex);
		}
	
	public boolean stuRegex(String str)
	{
		String regex="[0-9]{6}";
		return str.matches(regex);
	}
	public boolean teacherRegex(String str)
	{
		String regex="[0-9]{4}";
		return str.matches(regex);
	}
	public boolean adminRegex(String str)
	{
		String regex="[0-9]{2}";
		return str.matches(regex);
	}
}
